<header>
  <h3>Ticket Punch</h3>
</header>
      <div class="container">
          <div class="row" id = 'top-text'>
            <div class="col-md-12">
              <h4>Search for a movie and add it to your watch list!</h4>
            </div>
          </div>

            <div class="form-group">
              <div id = 'sign-in-fields' >





                <div class="row">
                  <input type="text" name="username" placeholder="...username" id = 'sign-in-username' class = 'form-control has-success'>
                </div>
                <div class="row">
                  <input type="password" name="password" placeholder="...password" id = 'sign-in-password' class = 'form-control has-success'>
                </div>

                <div class="row">
                  <input type="submit" name="name" value="Log-in" id = 'sign-in-submit'class="btn btn-block btn-lg btn-primary">
                </div>

              </div>

              <div class="row" id = "sign-up-link" >
                <a href="#">Sign up now!</a>
              </div>

              <div class="row" id = "bot-text" >
                <h4>Our #1 promise to you:</h4>
                <h5>We will never share your email.</h5>
              </div>

              <div class="jank">
                <%= form_tag('/sessions', method:'post') do %>
                  <div class="row">
                    <%= label_tag %>
                    <%= text_field_tag :username %>
                  </div>
                  <%= label_tag :password %>
                  <%= password_field_tag :password %>

                  <%= submit_tag('Log-In')%>
                <% end %>
              </div>

            </div>

      </div>
